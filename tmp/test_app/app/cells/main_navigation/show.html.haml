.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = render_cell(:search, :form, @page, params[:q])

      %a.btn.btn-navbar{:'data-target' => '.nav-collapse', :'data-toggle' => 'collapse'}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      = link_to(cms_path(@root), class: 'brand') do
        = @root.menu_title

      .container.nav-collapse
        = cms_tag_list(:ul, @root, :toclist, class: 'nav', id: 'main_nav') do |list, obj|
          - list.tag(:li, id: "main_nav_page_#{obj.id}", data: { path: obj.path }) do
            = link_to(cms_path(obj)) do
              = obj.menu_title