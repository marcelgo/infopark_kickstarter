.span12
  = cms_tag(:h1, @obj, :headline)

  = cms_tag(:div, @obj, :content)

  = simple_form_for(@presenter, url: cms_path(@obj)) do |form|
    = hidden_field_tag(:return_to, params[:return_to])

    = form.error_notification

    = form.input(:login)

    = form.input(:password)

    = form.button(:submit)

  = link_to(cms_path(@obj.reset_password_page)) do
    = t('login.show.reset_password')