!!! 5

%html
  %head
    %meta{charset: 'utf-8'}
    %meta{:'http-equiv' => 'X-UA-Compatible', content: 'IE=Edge,chrome=1'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}

    = render_cell(:title, :show, @obj)

    = csrf_meta_tags

    = rails_connector_header_tags

    / HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag('http://html5shim.googlecode.com/svn/trunk/html5.js')

    = stylesheet_link_tag('application', media: 'all')

    %link{href: '/favicon.ico', rel: 'shortcut icon'}

  %body{body_attributes}
    = render_cell(:edit_toggle, :show)

    = render_cell(:main_navigation, :show, @obj)

    .container
      .content
        .row
          .span12
            = render_cell(:flash, :messages, flash)

          = yield

    .container
      = render_cell(:footer, :show, @obj)

    = javascript_include_tag('application')

    = rails_connector_after_content_tags